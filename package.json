{
  "name": "eway",
  "version": "0.0.3",
  "description": "NodeJS utilities",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "mocha",
    "coverage": "nyc mocha",
    "tinker": "ts-node tinker.ts",
    "build": "tsc",
    "lint": "tslint -p . -t stylish",
    "lint:fix": "yarn lint --fix",
    "lint:check": "tslint-config-prettier-check ./tslint.json",
    "prepublishOnly": "yarn lint:fix && yarn build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yovanoc/eway.git"
  },
  "author": "Christopher Yovanovitch <yovano_c@outlook.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yovanoc/eway/issues"
  },
  "homepage": "https://github.com/yovanoc/eway#readme",
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.9.4",
    "chai": "^4.1.2",
    "electron": "^3.0.0-beta.10",
    "mocha": "^5.2.0",
    "nyc": "^13.0.1",
    "sinon": "^6.0.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.0.3"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "coverage",
      "dist",
      "test",
      "tinker.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  },
  "dependencies": {
    "electron-fetch": "^1.2.1"
  }
}
